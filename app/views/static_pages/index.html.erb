<h1>Flickr photo viewer</h1>

<%= form_with(url: "/", method: "get", local: true) do |f| %>
    <%= f.label :user_id, "User ID:" %>
    <%= f.text_field :user_id %>
    <%= f.submit "Search Flickr" %>
<% end %>

<% if @photos %>
    <% @photos.each do |photo| %>
        <img src="<%= Flickr.url_n(photo) %>"/>
    <% end %>
<% end %>